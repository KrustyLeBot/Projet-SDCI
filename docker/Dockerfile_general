FROM ubuntu:trusty
WORKDIR /
ADD . /
RUN apt-get update \
    && apt-get install -y curl \
    && curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash - \
    && apt-get install -y \
	net-tools \
    iputils-ping \
	iproute2 \
    nodejs \
    && npm install express \
    && npm install request \
    && wget http://homepages.laas.fr/smedjiah/tmp/server.js \
    && wget http://homepages.laas.fr/smedjiah/tmp/gateway.js \
    && wget http://homepages.laas.fr/smedjiah/tmp/device.js \
    && git clone https://github.com/KrustyLeBot/Projet-SDCI.git \

CMD /bin/bash